<Window x:Class="My_task_manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:My_task_manager"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="194*"/>
            <RowDefinition Height="27*"/>
        </Grid.RowDefinitions>
        <DataGrid Name="taskGrid" FontSize="30" Grid.Row="0"/>
        <Button Width="300" Height="60" Content="Start a notepad" FontSize="30" Margin="67,24,333,24" Grid.Row="1" Click="Button_Click_Notepad"/>
        <Button Height="60" Content="Update" FontSize="30" Margin="478,24,64,24" Grid.Row="1" Click="Button_Click_Update"/>
    </Grid>
</Window>
